/* pages/Record/Record.wxss */
.record-page {
  display: flex;
  flex-direction: column;
}

.record-body {
  flex: 1;
}

.bottom-bar {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center; 
  padding: 30px 0;
  width: 100%;
}

.operate-btn {
  margin: 0 30px;
  font-size: 30px;
  color: #5657FA;
}

.top-bar {
  width: 100%;
  padding: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}

.record-btn {
  margin: 0 auto;
  width: 100px;
}

.question-text {
  word-break: keep-all;
  word-wrap: break-word;
}

.text-btn {
  font-size: 16px;
}

.timer-container {
  position: absolute;
  top: 3px;
  left: 50%;
  transform: translateX(-50%);
}

.save-modal {
  position: absolute;
  top: 25%;
  left: 50%;
  transform: translateX(-50%) scale(0);
  height: 258.5px;
  width: 379.5px;
  z-index: 10000;
  transition: 0.2s all ease-in-out;
}

.display-modal {
  transform: translateX(-50%) scale(1);
}