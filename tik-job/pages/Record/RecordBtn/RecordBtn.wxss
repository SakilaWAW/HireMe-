/* common/RecordBtn/RecordBtn.wxss */
.record-btn-outer {
  border-radius: 50%;
  border: 2px solid #CCC;
  padding: 8px;
  box-sizing: border-box;
  width: 50px;
  height: 50px;
  margin: 0 auto;
}

.record-btn-inner {
  background: #5657FA;
  width: 100%;
  height: 100%;
  transition: 0.3s all ease-in-out;
  border-radius: 50%;
}